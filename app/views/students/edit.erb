<h1>Edit Student</h1>
<p>------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>

<form method="POST" action="/students/<%=@student.id%>"> 
<input type="hidden" name="_method" value="patch">     
<label for="first_name">First Name: </label>
<input type="text" id="first_name" name="first_name" value="<%=@student.first_name%>"><br>
<label for="last_name">Last Name: </label>
<input type="text" id="last_name" name="last_name" value="<%=@student.last_name%>"><br>
<label for="age">Age: </label>
<input type="text" id="age" name="age" value="<%=@student.age%>"><br>
<label for="gender">Gender: </label>
<input type="text" id="gender" name="gender" value="<%=@student.gender%>"><br>
<label for="grade">Grade: </label>
<input type="text" id="grade" name="grade" value="<%=@student.grade%>"><br>
<label for="subject">Subject: </label>
<input type="text" id="subject" name="subject" value="<%=@student.subject%>"><br>

<input type="submit" value="Edit Student">
</form>
<form method="POST" action="/students/<%=@student.id%>/delete">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Student">
</form>

